{
  "compilerOptions": {
    "incremental": false,
    "composite": false,
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["./dist"]
}
